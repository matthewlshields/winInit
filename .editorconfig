# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = crlf
insert_final_newline = true
trim_trailing_whitespace = true

# PowerShell files
[*.{ps1,psm1,psd1}]
indent_style = space
indent_size = 4
max_line_length = 120

# JSON files
[*.json]
indent_style = space
indent_size = 4

# Markdown files
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Shell scripts
[*.sh]
end_of_line = lf
indent_style = space
indent_size = 2

# Windows batch files
[*.{cmd,bat}]
end_of_line = crlf
indent_style = space
indent_size = 2

# Configuration files
[*.{config,conf}]
indent_style = space
indent_size = 2

# XML files
[*.xml]
indent_style = space
indent_size = 2

# Visual Studio Solution Files
[*.sln]
indent_style = tab
indent_size = 4

# Visual Studio Project Files
[*.{csproj,vbproj,vcxproj,vcxproj.filters}]
indent_style = space
indent_size = 2

# .NET source files
[*.{cs,csx,vb,vbx}]
indent_style = space
indent_size = 4
max_line_length = 120

# Web files
[*.{htm,html,js,ts,css,scss,less}]
indent_style = space
indent_size = 2
max_line_length = 120