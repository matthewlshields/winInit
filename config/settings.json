{
    "fileLocations": {
        "developmentRoot": "%USERPROFILE%\\Development",
        "documentsRoot": "%USERPROFILE%\\Documents",
        "projectsRoot": "%USERPROFILE%\\Development\\Projects",
        "githubRoot": "%USERPROFILE%\\Development\\github.com",
        "defaultFolders": [
            "Projects",
            "github.com",
            "Workspace",
            "Tools"
        ],
        "downloads": "%USERPROFILE%\\Downloads",
        "pictures": "%USERPROFILE%\\Pictures",
        "desktop": "%USERPROFILE%\\Desktop"
    },
    "terminal": {
        "prompt": {
            "style": "default",
            "showPath": true,
            "showGitStatus": true,
            "showTimestamp": false
        },
        "colors": {
            "foreground": "White",
            "background": "Black",
            "accent": "Cyan",
            "error": "Red",
            "warning": "Yellow",
            "success": "Green"
        }
    },
    "software": {
        "packageManagers": [
            "winget",
            "chocolatey"
        ],
        "applications": [
            {
                "name": "Git",
                "id": "Git.Git",
                "source": "winget"
            },
            {
                "name": "Visual Studio Code",
                "id": "Microsoft.VisualStudioCode",
                "source": "winget"
            },
            {
                "name": "Windows Terminal",
                "id": "Microsoft.WindowsTerminal",
                "source": "winget"
            },
            {
                "name": "PowerShell Core",
                "id": "Microsoft.PowerShell",
                "source": "winget"
            },
            {
                "name": "1Password",
                "id": "AgileBits.1Password",
                "source": "winget"
            }
        ],
        "vscodeExtensions": [
            {
                "name": "PowerShell",
                "id": "ms-vscode.powershell"
            },
            {
                "name": "Git Graph",
                "id": "mhutchie.git-graph"
            },
            {
                "name": "GitLens",
                "id": "eamodio.gitlens"
            }
        ]
    },
    "explorer": {
        "showHiddenFiles": true,
        "showFileExtensions": true,
        "showPathInTitleBar": true,
        "showAllFolders": true
    },
    "github": {
        "sshKeyName": "Personal SSH - ED25519",
        "useSSHSigning": true,
        "sshSigningKey": "ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAIHXDQBMdY0RE7RfVJApJmv2q36Iu2ElXcLR6I/MX6dsE",
        "sshSigningProgram": "%USERPROFILE%\\AppData\\Local\\1Password\\app\\8\\op-ssh-sign.exe",
        "gitConfig": {
            "user.signingkey": "ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAIHXDQBMdY0RE7RfVJApJmv2q36Iu2ElXcLR6I/MX6dsE",
            "gpg.format": "ssh",
            "gpg.ssh.program": "%USERPROFILE%\\AppData\\Local\\1Password\\app\\8\\op-ssh-sign.exe",
            "commit.gpgsign": "true"
        },
        "useGitHubCLI": true
    },
    "1password": {
        "account": "your-account.1password.com",
        "vault": "Development",
        "sshKeyItem": "GitHub SSH Key",
        "gpgKeyItem": "GitHub GPG Key",
        "gitConfigItem": "GitHub Git Config"
    }
} 